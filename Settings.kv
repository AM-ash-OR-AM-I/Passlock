<RightSwitch@IRightBodyTouch+MDSwitch>
<ListItem@OneLineAvatarIconListItem>
	_no_ripple_effect: True

<SettingScreen@MDScreen>

    MDBoxLayout:
        adaptive_height:True
        pos_hint:{'top':1}
        orientation:'vertical'
        spacing:'15dp'
#        MDBoxLayout:
#            adaptive_height:True
#            padding:icon_left.x,dp(15),0,0
#            MDIconButton:
#                icon:'arrow-left'
#            MDLabel:
#                text:'Settings'
#                font_style:'H5'
#                adaptive_size:True
        MDToolbar:
            title:'Settings'
            elevation:10
            left_action_items:[['arrow-left',lambda x: app.back_button()]]

	    MDBoxLayout:
            adaptive_height:True
            orientation:'vertical'

            OneLineIconListItem:
                text:"Theme"
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                IconLeftWidget:
                    id: icon_left
                    icon:'circle-half-full'
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color

            OneLineIconListItem:
                text:"Advanced Security"
                IconLeftWidget:
                    icon:'shield-star'
            OneLineIconListItem:
                text:"Backup & Restore"
                IconLeftWidget:
                    icon:"backup-restore"
            OneLineIconListItem:
                text:"Change Password"
                IconLeftWidget:
                    icon:"lock"
            OneLineIconListItem:
                text:"Delete Account"
                IconLeftWidget:
                    icon:"trash-can-outline"
        MDSeparator:
        MDBoxLayout:
            adaptive_height:True
            padding:0,dp(20),0,0
            orientation:'vertical'
            MDRectangleFlatButton:
                text:'[b]EXPLAIN FEATURES'
                pos_hint:{'center_x':.5}



#SettingScreen:
