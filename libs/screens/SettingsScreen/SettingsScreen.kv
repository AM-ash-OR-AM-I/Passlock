<RightSwitch@IRightBodyTouch+MDSwitch>
    widget_style: "ios"

<SwitchListItem@ThreeLineAvatarIconListItem>
    ripple_alpha:.1
    text:"Auto sync"
    icon:"auto-upload"
    secondary_text:"Passwords will be synced"
    tertiary_text:'automatically'
    theme_text_color:'Custom'
    active: False
    text_color:app.text_color
    on_release:
        if self.right - self.last_touch.x >= dp(80): self.active = not self.active
    RightSwitch:
        id: switch
        active: root.active
        width: dp(44)
    IconLeftWidget:
        icon: root.icon
        theme_text_color:'Custom'
        text_color:app.text_color
        
<MyListItem@OneLineIconListItem>
    theme_text_color:'Custom'
    text_color:app.text_color
    icon:"android"
    icon_color: ""
    size_hint_x:.8
    ripple_alpha:.1
    IconLeftWidget:
        icon: root.icon
        theme_text_color:'Custom'
        text_color:root.text_color if not root.icon_color else root.icon_color

<AboutClass@BoxLayout>
    orientation:'vertical'
    MDLabel:
        text:'Made by Ashutosh'
        halign:'center'
        font_size:'20sp'
        theme_text_color:'Custom'
        text_color: app.theme_cls.primary_color
        font_name:'Poppins'
    MDSeparator:
    MDTextButton:
        size_hint_y:.5
        markup: True
        font_size:'16sp'
        text:f"[font=Icons][size={int(self.font_size)+10}] {md_icons['github']}[/font][/size]   GitHub Code"
        pos_hint:{'center_x':.5,'center_y':1}
        on_release:
            app.root.SettingsScreen.open_web(github=True)
    MDSeparator:
    MDTextButton:
        size_hint_y:.5
        markup: True
        font_size:'16sp'
        text:f"[color=#de6666][font=Icons][size={int(self.font_size)+10}] {md_icons['gmail']}[/font][/size]   Contact Me[/color]"
        pos_hint:{'center_x':.5,'center_y':1}
        on_release:
            app.root.SettingsScreen.open_web(email=True)

<SettingsScreen>
    md_bg_color: app.bg_color_dark if app.dark_mode else app.bg_color_light
    MDBoxLayout:
        adaptive_height:True
        pos_hint:{'top':1}
        orientation:'vertical'
        spacing:'15dp'
        Toolbar:
            title:'Settings'
            height:'60dp'
            md_bg_color:app.primary_accent
            padding:dp(15),0
            elevation:5
            icon_color:app.theme_cls.primary_color
            left_action_items:[['arrow-left',lambda x: app.root.goback()]]

	    MDBoxLayout:
            adaptive_height:True
            orientation:'vertical'
            spacing:'5dp'
            MDBoxLayout:
                adaptive_height:True
                padding:dp(10),dp(5),dp(10),dp(10)
                MyListItem:
                    icon:"account-circle"
                    height: "58dp"
                    bg_color: app.primary_accent
                    text: app.email
                    font_style:"H6"
            MyListItem:
                text:"Sync Passwords"
                icon:"sync"
                on_release: app.root.HomeScreen.open_sync_dialog()
                
            SwitchListItem:
                text:"Auto sync"
                secondary_text:"Passwords will be synced"
                tertiary_text:'automatically'
                active: app.auto_sync
                on_active: 
                    app.auto_sync = self.active

            SwitchListItem:
                id: system_dark_item
                text:"Use system theme"
                icon:"theme-light-dark"
                secondary_text:"Dark/Light mode of app will be"
                tertiary_text:"synchronised with system theme"
                active: app.system_dark_mode
                on_active: 
                    app.system_dark_mode = self.active
                
            SwitchListItem:
                text:"Extra Security"
                icon:"shield-star" if self.active else "shield-off-outline"
                secondary_text:"Login when you leave the app"
                tertiary_text: "for more than 5 minutes."
                active: app.extra_security
                on_active: 
                    app.extra_security = self.active
            

        MDSeparator:

        MDBoxLayout:
            adaptive_height:True
            orientation:'vertical'
            spacing:'5dp'
            MyListItem:
                text:"YouTube Demo"
                icon:"youtube"
                icon_color:"#FF0000"
                on_release: 
                    root.open_youtube_demo()
            
            MyListItem:
                text:"About the app"
                icon:"information"
                on_release: 
                    root.open_about()

        MyListItem:
            text:"Log out"
            icon:"logout"
            disabled: app.signup
            size_hint_x:.5
            pos_hint:{'center_x':.5}
            opacity: 1 * (not self.disabled)
            on_release: 
                root.logout()
        
            
