#:import window kivy.core.window.Window
#:set height window.height
#:set width window.width
#: set rad width/2
#: set icon_size 60
#: import platform kivy.platform
#: import CardTextField libs.modules.CardTextField.CardTextField
#: import Clock kivy.clock.Clock

<BorderCard@CardTextField>
	inactive_color:app.theme_cls.primary_light[:-1]+[.6]
	icon_font_size:icon_size
	thickness:dp(1) if platform == 'android' else dp(1.4)
	icon_color:app.theme_cls.primary_light

<FloatingButton@MDFloatingActionButton+FakeCircularElevationBehavior>
	_no_ripple_effect: True

<LoginScreen>:
	md_bg_color: app.bg_color
    canvas:
		Color:
			rgba:app.theme_cls.primary_color[:-1]+[.9]
		Ellipse:
			size:rad,rad
			pos:0-rad/2,height-rad+20
			angle_start:0
			angle_end:180
		Color:
			rgba:app.login_circle_light[:-1]+[.7]
		Ellipse:
			pos:0,height-rad/2
			size:rad,rad
			angle_start:90
			angle_end:270

	MDBoxLayout:
		adaptive_height:True
		id: box
		pos_hint:{"top":.95}
		orientation:'vertical'
		spacing:'70dp'
		MDLabel:
			adaptive_height:True
			text:"LOGIN\nTO [color=ff7a4f][u]PASS[/u]"
			markup:True
			theme_text_color:"Custom"
			text_color:app.text_color
			font_name:'Poppins'
			halign:'center'
			font_size:'44dp'
			pos_hint:{'top':1}
		MDBoxLayout:
			adaptive_height:True
			spacing:'50dp'
			orientation:'vertical'
			padding:(0,dp(15),0,0)
			MDBoxLayout:
				adaptive_height:True
				orientation:'vertical'
				spacing:'35dp'
				BorderCard:
					id: password
					label_name:'Password'
					hint_text:"Enter Password"
					pos_hint:{'center_x':.5}
					icon_right_action:['eye-off-outline']

				FloatingButton:
					id: lock
					elevation:10
					icon:'login'
					user_font_size:80
					user_font_size:80
					md_bg_color:app.light_color if not app.dark_mode else app.dark_color
					theme_text_color:'Custom'
					text_color:app.theme_cls.primary_color
					on_press:
						root.login_button_pressed(password.text)
					pos_hint:{'center_x':.5}

