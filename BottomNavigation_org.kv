#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import CircularRippleBehavior kivymd.uix.behaviors.CircularRippleBehavior


<IconButton>
<LabelIcon@MDBoxLayout>
    canvas:
        Color:
            rgba:[1,0,0,0]
        Rectangle:
            pos:self.pos
            size:self.size
    orientation:'vertical'
    adaptive_size:True
    icon:'plus'
    text_color:[1,1,1,1]
    text:'CREATE'
    spacing:'5dp'
    MDIcon:
        icon:root.icon
        adaptive_size:True
        font_size:'30dp'
#        on_release:print("Pressed")
        pos_hint:{'center_x':.5}
        theme_text_color:'Custom'
        text_color:root.text_color
    MDLabel:
        adaptive_size:True
        text:root.text
        font_size:'12sp'
        pos_hint:{'center_x':.5}
        theme_text_color:'Custom'
        text_color:root.text_color
        font_name:'RobotoMedium'
<BottomNavigation@RelativeLayout>
    position:{'center_x':.5,'center_y':.1}
    MDCard:
        id:card
        pos_hint:root.position
        size_hint_y: None
        height:'70dp'
        size_hint_x:.8
        md_bg_color:get_color_from_hex('303030')
        radius: '35dp'
        elevation: 15
    MDBoxLayout:
        adaptive_height:True
        height:card.height-dp(20)
        spacing:(card.width-dp(230))/3
        x:card.x+dp(35)
        center_y:card.center_y
        LabelIcon:
        LabelIcon:
            icon:'magnify'
            text:'FIND'
        LabelIcon:
            icon:'update'
            text:'UPDATE'
        LabelIcon:
            icon:'trash-can-outline'
            text:'DELETE'

MDScreen:
    BottomNavigation:


