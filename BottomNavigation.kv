#:import get_color_from_hex kivy.utils.get_color_from_hex
<LabelIcon>
#    canvas:
#        Color:
#            rgba:app.theme_cls.primary_color[:-1]+[root.opac]
#        RoundedRectangle:
#            pos:self.x+dp(18),self.y+dp(18)
#            size:dp(34),dp(34)
#            radius:dp(10),dp(10)
    orientation:'vertical'
    adaptive_width:True
    icon:''
    text:'CREATE'
    spacing:-lbl.font_size-dp(1)
    MDIconButton:

        id:icon
        icon:root.icon
        scale: 0.4
        user_font_size:70*root.scale
        on_release: root.active= not root.active
        pos_hint:{'center_x':.5}
        theme_text_color:'Custom'
        text_color:root.text_color

    MDLabel:
        id: lbl
        adaptive_height:True
#        width:'70dp'
        text:root.text
        font_size:sp(12*root.scale)
        halign:'center'
        pos_hint:{'center_x':.5}
        theme_text_color:'Custom'
        text_color:root.text_color
        font_name:'RobotoMedium'

<BottomNavigationItem@RelativeLayout>
    position:{'center_x':.5,'center_y':0.08}
    MDCard:
        id:card
        pos_hint:root.position
        size_hint_y: None
        height:'70dp'
        size_hint_x:.8
        md_bg_color:get_color_from_hex('303030')
        radius: '35dp'
        elevation: 15
    MDBoxLayout:
        id: box
        adaptive_height:True
        height:card.height-dp(20)
        spacing:(card.width-dp(70)*4-dp(60))/3
        x:card.x+dp(30)
        center_y:card.center_y
        LabelIcon:
            id: create
            icon:'plus'#if self.scale==1 else 'plus-circle'

        LabelIcon:
            id: find
            icon:'magnify'#if self.scale==1 else 'card-search'
            text:'FIND'

        LabelIcon:
            id: update
            icon:'update'
            text:'UPDATE'
        LabelIcon:
            id: delete
            icon:'trash-can-outline' if self.scale==1 else 'trash-can'
            text:'DELETE'


<MDTab@Screen+ThemableBehavior>


<BottomNavigation>
    orientation: "vertical"
    height:dp(56)

    ScreenManager:
#        current: root.current
        screens: root.screens


    BottomNavigationItem:
        id: item
